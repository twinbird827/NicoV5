<UserControl x:Class="NicoV5.Mvvm.Components.VideoItemsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NicoV5.Mvvm.Components"
             mc:Ignorable="d">
    
    <UserControl.Resources>

        <DataTemplate DataType="{x:Type local:VideoViewModel}">
            <local:VideoWindow />
        </DataTemplate>

    </UserControl.Resources>

    <ListBox ItemsSource="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}"
             ItemContainerStyle="{StaticResource VideoWindow.ItemContainerStyle}"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             ScrollViewer.CanContentScroll="True"
             VirtualizingPanel.ScrollUnit="Pixel"
             HorizontalAlignment="Stretch">
    </ListBox>
</UserControl>
